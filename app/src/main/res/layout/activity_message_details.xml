<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line"
    tools:context="com.jingna.xssapp.page.MessageDetailsActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_top_back" />

        </RelativeLayout>

        <TextView
            android:text="订单详情"
            style="@style/tv_top_title" />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_right"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/black_333333"
                android:textSize="12sp"
                android:text="查看工人位置"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_above="@+id/rl_bottom"
        android:layout_below="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="#F83030"
                android:layout_width="match_parent"
                android:layout_height="149dp">

                <TextView
                    android:id="@+id/tv_order_type"
                    android:layout_marginTop="54dp"
                    android:layout_marginLeft="14dp"
                    android:textColor="@color/white_ffffff"
                    android:textSize="17sp"
                    android:text="订单已完成"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="79dp"
                    android:textColor="@color/white_ffffff"
                    android:textSize="10sp"
                    android:text="如有意见请联系我们的客服哦~"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:src="@mipmap/message_complete"
                    android:layout_width="72dp"
                    android:layout_height="72dp" />

            </RelativeLayout>

            <LinearLayout
                android:background="@color/white_ffffff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="@color/black_333333"
                        android:textSize="13sp"
                        android:text="服务类型"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_service_type"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:text="室内卫生"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="@color/black_333333"
                        android:textSize="13sp"
                        android:text="     订单ID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_order_code"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:text="132464631"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="@color/black_333333"
                        android:textSize="13sp"
                        android:text="下单时间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:text="2019-04-22    15:20:32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="@color/black_333333"
                        android:textSize="13sp"
                        android:text="服务地址"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:text="北京市海淀区知春路56号院  14#3单元1205"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="@color/black_333333"
                        android:textSize="13sp"
                        android:text="订单金额"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="#F83030"
                        android:textSize="13sp"
                        android:text="￥199.80"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:background="@color/white_ffffff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="19dp"
                    android:textColor="@color/black_333333"
                    android:textSize="13sp"
                    android:text="特别备注"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_remarks"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:text="请使用消毒液彻底消毒。"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:background="@color/white_ffffff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="@color/black_333333"
                        android:textSize="13sp"
                        android:text="上门时间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_shangmen_time"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:text="2019-04-22    15:20:32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_worker"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginLeft="14dp"
                            android:textColor="@color/black_333333"
                            android:textSize="13sp"
                            android:text="服务人员"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <RelativeLayout
                            android:descendantFocusability="blocksDescendants"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.RecyclerView
                                android:layout_marginLeft="14dp"
                                android:id="@+id/rv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="14dp"
                            android:textColor="@color/black_333333"
                            android:textSize="13sp"
                            android:text="开始时间"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_start_time"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="14dp"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:text="2019-04-22    15:20:32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="14dp"
                            android:textColor="@color/black_333333"
                            android:textSize="13sp"
                            android:text="结束时间"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_end_time"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="14dp"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:text="2019-04-22    15:20:32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_bottom"
        android:background="@color/white_ffffff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:background="#F83030"
            android:textColor="@color/white_ffffff"
            android:textSize="13sp"
            android:text="去  评  价"
            android:layout_width="83dp"
            android:layout_height="31dp" />

    </RelativeLayout>

</RelativeLayout>
