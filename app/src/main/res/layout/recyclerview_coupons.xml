<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:background="@drawable/selector_fragment_my_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:layout_width="98dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="35sp"
                        android:textColor="#F83030"
                        android:text="50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="13sp"
                        android:textColor="#F83030"
                        android:text="元"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#F83030"
                    android:textSize="10sp"
                    android:text="新手红包"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="14dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black_333333"
                    android:text="室内卫生优惠卷"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="16dp"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:text="有效期至：2019-01-21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:text="使用说明"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@mipmap/round_right"
                        android:layout_gravity="center_vertical"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />

                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:layout_marginBottom="12dp"
                    android:textSize="10sp"
                    android:textColor="#999999"
                    android:text="满100.00元可用，不可与其他优惠活动同时享受。在线支付专项。最终解释权归本公司所有。"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        
        <TextView
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:gravity="center"
            android:textColor="#F83030"
            android:textSize="14sp"
            android:text="立即使用"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>

</LinearLayout>
