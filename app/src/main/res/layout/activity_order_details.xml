<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/line"
    tools:context="com.jingna.xssapp.page.OrderDetailsActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_top_back" />

        </RelativeLayout>

        <TextView
            android:text="室内卫生"
            style="@style/tv_top_title" />

        <RelativeLayout
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/message_kefu"
                android:layout_width="20dp"
                android:layout_height="19dp" />

        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="7dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@color/white_ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="14dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#F83030"
                    android:textSize="10sp"
                    android:text="预约"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                
                <View
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#F83030"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>

                <TextView
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#F83030"
                    android:textSize="10sp"
                    android:text="支付"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#F83030"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>

                <TextView
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#F83030"
                    android:textSize="10sp"
                    android:text="派单"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#F83030"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>

                <TextView
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#F83030"
                    android:textSize="10sp"
                    android:text="服务"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#AAAAAA"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>

                <TextView
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#666666"
                    android:textSize="10sp"
                    android:text="完成"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#AAAAAA"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>

                <TextView
                    android:layout_marginRight="14dp"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#666666"
                    android:textSize="10sp"
                    android:text="评价"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:background="@color/white_ffffff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="@color/black_333333"
                        android:textSize="13sp"
                        android:text="服务类型"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_service_type"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="@color/black_333333"
                        android:textSize="13sp"
                        android:text="     订单ID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_order_code"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="@color/black_333333"
                        android:textSize="13sp"
                        android:text="下单时间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_marginRight="14dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="@color/black_333333"
                        android:textSize="13sp"
                        android:text="服务地址"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_marginRight="14dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:background="@color/white_ffffff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="19dp"
                    android:textColor="@color/black_333333"
                    android:textSize="11sp"
                    android:text="特别备注"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_remarks"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="26dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="14dp"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:background="@color/white_ffffff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black_333333"
                        android:textSize="11sp"
                        android:text="预约上门时间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginLeft="7dp"
                        android:textColor="#666666"
                        android:textSize="11sp"
                        android:text="2019-04-22    15:20:32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="14dp"
                        android:textColor="@color/black_333333"
                        android:textSize="13sp"
                        android:text="        服务人员"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:descendantFocusability="blocksDescendants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:layout_marginLeft="14dp"
                            android:id="@+id/rv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_sure"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="34dp"
                android:background="#f83030"
                android:textColor="@color/white_ffffff"
                android:textSize="17sp"
                android:text="确 认 服 务 开 始"
                android:layout_width="294dp"
                android:layout_height="42dp" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="23dp"
                android:layout_marginTop="21dp"
                android:background="#666666"
                android:textColor="@color/white_ffffff"
                android:textSize="17sp"
                android:text="取 消 服 务"
                android:layout_width="294dp"
                android:layout_height="42dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
