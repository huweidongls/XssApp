<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    tools:context="com.jingna.xssapp.page.LoginActivity">

    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="50dp"
        android:layout_height="50dp">

        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/back_w"
            android:layout_width="8dp"
            android:layout_height="16dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_type"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rl_back"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_type_register"
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="wrap_content">

            <TextView
                android:lines="1"
                android:layout_gravity="center_horizontal"
                android:textSize="19sp"
                android:textColor="@color/white_ffffff"
                android:text="快速注册"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/view_register"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@color/white_ffffff"
                android:layout_width="80dp"
                android:layout_height="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_type_login"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_horizontal"
                android:textSize="19sp"
                android:textColor="@color/white_ffffff"
                android:text="登录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/view_login"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@color/white_ffffff"
                android:layout_width="80dp"
                android:layout_height="3dp"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="294dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/bg_1affffff_3dp"
                android:orientation="horizontal"
                android:layout_width="294dp"
                android:layout_height="49dp">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:textSize="17sp"
                    android:textColor="@color/white_ffffff"
                    android:text="+86"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:inputType="phone"
                    android:id="@+id/et_phone"
                    android:textCursorDrawable="@mipmap/et_guangbiao"
                    android:textColor="@color/white_ffffff"
                    android:textColorHint="#999999"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"
                    android:hint="输入手机号码"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="7dp"
                android:background="@drawable/bg_1affffff_3dp"
                android:orientation="horizontal"
                android:layout_width="294dp"
                android:layout_height="49dp">

                <EditText
                    android:id="@+id/et_pwd"
                    android:inputType="textPassword"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="60dp"
                    android:layout_centerVertical="true"
                    android:textCursorDrawable="@mipmap/et_guangbiao"
                    android:textColor="@color/white_ffffff"
                    android:textColorHint="#999999"
                    android:textSize="15sp"
                    android:hint="请输入密码"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:id="@+id/rl_is_show_pwd"
                    android:layout_alignParentRight="true"
                    android:layout_width="49dp"
                    android:layout_height="49dp">

                    <ImageView
                        android:id="@+id/iv_is_show_pwd"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/bukejian"
                        android:layout_width="21dp"
                        android:layout_height="11dp" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_forgot_pwd"
                android:layout_gravity="end"
                android:layout_marginRight="1dp"
                android:layout_marginTop="15dp"
                android:textSize="13sp"
                android:textColor="@color/white_ffffff"
                android:text="找回密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <Button
                android:id="@+id/btn_login"
                android:layout_marginTop="29dp"
                android:background="@mipmap/btn_login"
                android:layout_width="294dp"
                android:layout_height="42dp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_register"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="294dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/bg_1affffff_3dp"
                android:orientation="horizontal"
                android:layout_width="294dp"
                android:layout_height="49dp">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:textSize="17sp"
                    android:textColor="@color/white_ffffff"
                    android:text="+86"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:inputType="phone"
                    android:id="@+id/et_register_phone"
                    android:textCursorDrawable="@mipmap/et_guangbiao"
                    android:textColor="@color/white_ffffff"
                    android:textColorHint="#999999"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"
                    android:hint="输入手机号码"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="7dp"
                android:layout_width="294dp"
                android:layout_height="49dp">

                <RelativeLayout
                    android:background="@drawable/bg_1affffff_3dp"
                    android:layout_width="184dp"
                    android:layout_height="49dp">

                    <EditText
                        android:layout_centerVertical="true"
                        android:inputType="number"
                        android:id="@+id/et_register_code"
                        android:textCursorDrawable="@mipmap/et_guangbiao"
                        android:textColor="@color/white_ffffff"
                        android:textColorHint="#999999"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="14dp"
                        android:textSize="15sp"
                        android:hint="输入短信验证码"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_get_code"
                    android:background="@drawable/bg_1affffff_3dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="104dp"
                    android:layout_height="49dp">

                    <TextView
                        android:gravity="center"
                        android:id="@+id/tv_code"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white_ffffff"
                        android:textSize="13sp"
                        android:text="获取验证码"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="7dp"
                android:background="@drawable/bg_1affffff_3dp"
                android:orientation="horizontal"
                android:layout_width="294dp"
                android:layout_height="49dp">

                <EditText
                    android:id="@+id/et_register_pwd"
                    android:inputType="textPassword"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="60dp"
                    android:layout_centerVertical="true"
                    android:textCursorDrawable="@mipmap/et_guangbiao"
                    android:textColor="@color/white_ffffff"
                    android:textColorHint="#999999"
                    android:textSize="15sp"
                    android:hint="请设置密码，长度不少于8位"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:id="@+id/rl_is_show_register_pwd"
                    android:layout_alignParentRight="true"
                    android:layout_width="49dp"
                    android:layout_height="49dp">

                    <ImageView
                        android:id="@+id/iv_is_show_register_pwd"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/bukejian"
                        android:layout_width="21dp"
                        android:layout_height="11dp" />

                </RelativeLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/btn_fast_register"
                android:background="@mipmap/btn_fast_register"
                android:layout_marginTop="28dp"
                android:layout_width="294dp"
                android:layout_height="42dp" />

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="19dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/white_ffffff"
                    android:text="注册即代表您阅读并同意"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_user_agreement"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:text="《用户服务协议》"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/white_ffffff"
                    android:text="和"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_privacy"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:text="《隐私政策》"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
