<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login_bg"
    tools:context="com.jingna.xssapp.page.ForgotPwd1Activity">

    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="50dp"
        android:layout_height="50dp">

        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/back_w"
            android:layout_width="8dp"
            android:layout_height="16dp"/>

    </RelativeLayout>

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textColor="@color/white_ffffff"
        android:textSize="19sp"
        android:text="设置新密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:background="@color/white_ffffff"
        android:layout_width="90dp"
        android:layout_height="2dp"/>

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="39dp"
        android:background="@drawable/bg_1affffff_3dp"
        android:orientation="horizontal"
        android:layout_width="294dp"
        android:layout_height="49dp">

        <com.jingna.xssapp.widget.EditTextWithDel
            android:id="@+id/et_old_pwd"
            android:inputType="textPassword"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@mipmap/et_guangbiao"
            android:textColor="@color/white_ffffff"
            android:textColorHint="#999999"
            android:textSize="15sp"
            android:hint="请输入密码"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_1affffff_3dp"
        android:orientation="horizontal"
        android:layout_width="294dp"
        android:layout_height="49dp">

        <EditText
            android:id="@+id/et_pwd"
            android:inputType="textPassword"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="60dp"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@mipmap/et_guangbiao"
            android:textColor="@color/white_ffffff"
            android:textColorHint="#999999"
            android:textSize="15sp"
            android:hint="请再次输入密码"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rl_is_show_pwd"
            android:layout_alignParentRight="true"
            android:layout_width="49dp"
            android:layout_height="49dp">

            <ImageView
                android:id="@+id/iv_is_show_pwd"
                android:layout_centerInParent="true"
                android:src="@mipmap/bukejian"
                android:layout_width="21dp"
                android:layout_height="11dp" />

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:background="@mipmap/btn_sure"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="56dp"
        android:layout_width="294dp"
        android:layout_height="42dp" />

</LinearLayout>
